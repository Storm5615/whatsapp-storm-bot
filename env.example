# ========================================
# WhatsApp AI Bot Configuration
# ========================================

# Bot Configuration
BOT_NAME=WhatsApp AI Bot
BOT_PREFIX=!
OWNERS=your-phone-number@c.us,another-owner@c.us
BOT_VERSION=1.0.0

# Database Configuration
MONGODB_URI=mongodb://admin:password@localhost:27017/whatsapp-bot?authSource=admin
MONGODB_OPTIONS={"useNewUrlParser":true,"useUnifiedTopology":true}

# AI Configuration
AI_API_KEY=your-openai-api-key-here
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7
AI_PROVIDER=openai

# Alternative AI Providers
# ANTHROPIC_API_KEY=your-anthropic-api-key
# GOOGLE_AI_API_KEY=your-google-ai-api-key
# COHERE_API_KEY=your-cohere-api-key

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
ENCRYPTION_KEY=your-32-character-encryption-key-here
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_MESSAGE=5
RATE_LIMIT_COMMAND=10
RATE_LIMIT_AI=3
RATE_LIMIT_BROADCAST=1
RATE_LIMIT_WINDOW=60000

# Web Interface Configuration
WEB_PORT=3000
WEB_HOST=0.0.0.0
WEB_BASE_URL=https://yourdomain.com
WEB_SESSION_SECRET=your-web-session-secret

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/bot.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_ROTATE_INTERVAL=1d

# File Upload Configuration
UPLOAD_MAX_SIZE=10mb
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,video/mp4,audio/mp3,audio/ogg
UPLOAD_PATH=public/uploads

# Sticker Configuration
STICKER_PACK_NAME=WhatsApp Bot
STICKER_PACK_AUTHOR=Your Name
STICKER_QUALITY=high
STICKER_BACKGROUND=transparent

# Media Processing
MEDIA_MAX_SIZE=50mb
MEDIA_COMPRESSION_QUALITY=80
MEDIA_THUMBNAIL_SIZE=200x200

# Group Management
GROUP_AUTO_JOIN=true
GROUP_WELCOME_MESSAGE=Hello! I'm a WhatsApp bot. Type !help for commands.
GROUP_GOODBYE_MESSAGE=Goodbye! Thanks for having me in your group.

# Memory and Caching
MEMORY_TTL=3600000
CACHE_TTL=1800000
SESSION_TTL=86400000

# Notification Configuration
NOTIFY_OWNERS_ON_ERROR=true
NOTIFY_OWNERS_ON_STARTUP=true
NOTIFY_OWNERS_ON_SHUTDOWN=true

# Performance Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30000
HEARTBEAT_INTERVAL=30000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# External Services (Optional)
# REDIS_URL=redis://localhost:6379
# ELASTICSEARCH_URL=http://localhost:9200
# SENTRY_DSN=your-sentry-dsn

# Development Configuration
NODE_ENV=production
DEBUG=false
VERBOSE_LOGGING=false

# WhatsApp Web Configuration
WHATSAPP_CONNECTION_TIMEOUT=60000
WHATSAPP_RECONNECT_INTERVAL=5000
WHATSAPP_MAX_RECONNECT_ATTEMPTS=10
WHATSAPP_QR_TIMEOUT=60000

# Plugin Configuration
PLUGINS_ENABLED=basic,ai,admin,group,media,sticker,memory,analytics
PLUGIN_TIMEOUT=30000

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT=30000
API_CORS_ORIGIN=*

# SSL Configuration (for production)
SSL_ENABLED=true
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM=bot@yourdomain.com

# Telegram Bot (for admin notifications)
# TELEGRAM_BOT_TOKEN=your-telegram-bot-token
# TELEGRAM_CHAT_ID=your-chat-id

# Discord Webhook (for notifications)
# DISCORD_WEBHOOK_URL=your-discord-webhook-url

# Custom Commands
CUSTOM_COMMANDS_ENABLED=true
CUSTOM_COMMANDS_PATH=./custom-commands

# Auto-Reply Configuration
AUTO_REPLY_ENABLED=true
AUTO_REPLY_DELAY=1000
AUTO_REPLY_COOLDOWN=5000

# Spam Protection
SPAM_PROTECTION_ENABLED=true
SPAM_THRESHOLD=5
SPAM_WINDOW=60000
SPAM_ACTION=warn

# User Management
USER_REGISTRATION_ENABLED=true
USER_VERIFICATION_REQUIRED=false
USER_DEFAULT_PERMISSION_LEVEL=0

# Group Settings
GROUP_AUTO_MODERATION=true
GROUP_WORD_FILTER_ENABLED=true
GROUP_LINK_PROTECTION=true
GROUP_ANTI_SPAM=true

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Bot is currently under maintenance. Please try again later.

# Feature Flags
FEATURE_AI_CHAT=true
FEATURE_STICKER_CREATION=true
FEATURE_MEDIA_PROCESSING=true
FEATURE_GROUP_MANAGEMENT=true
FEATURE_ANALYTICS=true
FEATURE_WEB_INTERFACE=true 