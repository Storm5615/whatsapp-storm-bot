{
  "version": 2,
  "name": "whatsapp-ai-bot",
  "framework": "nodejs",
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node@3.0.0",
      "config": {
        "maxDuration": 30,
        "memory": 1024
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "regions": ["iad1"],
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
} 